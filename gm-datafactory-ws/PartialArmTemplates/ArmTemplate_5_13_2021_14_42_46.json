{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "gm-datafactory-ws"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/gmcore-bi-bi15a_movimento-daily')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"runtimeState": "Started",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "BI15A_MOVIMENTO",
							"type": "PipelineReference"
						},
						"parameters": {
							"src_table_name": "bi.dbo.bi15a_movimento",
							"src_partition_col": "bi15a_id_filial",
							"dest_table_name": "/mnt/raw/rdbms/mssql/gmcore/bi/dbo/bi15a_movimento",
							"dest_partition_col": "bi15a_id_filial",
							"src_incremental_col": "cast(bi15a_rowversion as bigint)",
							"op_table_name": "/mnt/operational/rdbms/mssql/gmcore/bi/dbo/bi15a_movimento",
							"src_primary_key": "bi15a_id"
						}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Day",
						"interval": 1,
						"startTime": "2021-05-13T17:37:00Z",
						"timeZone": "UTC",
						"schedule": {
							"minutes": [
								0
							],
							"hours": [
								4
							]
						}
					}
				}
			},
			"dependsOn": []
		}
	]
}